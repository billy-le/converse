<!DOCTYPE html>
<html>
  <link rel="stylesheet" href="style.css" />
  <script src="https://kit.fontawesome.com/536e9f73a2.js" crossorigin="anonymous" defer></script>
  <head>
    <title>Web RTC</title>
  </head>
  <script>
    const ROOM_ID = "{{roomId}}";
  </script>
  <script src="index.js" type="module"></script>
  <body>
    <div class="container">
      <div class="wrap">
        <aside class="chatroom">
          <ul id="messages"></ul>
          <form id="form">
            <input id="message" name="message" autocomplete="off" />
            <button type="submit">Send</button>
          </form>
        </aside>
      </div>
      <main class="main">
        <video id="local-stream" playsinline muted></video>
        <video id="remote-stream" playsinline ></video>
        <div id="media-devices"></div>
        <div id="controls">
            <button id="mic">
              <i class="fa-solid fa-microphone-lines"></i>
               <i class="fa-solid fa-microphone-lines-slash"></i>
            </button>
            <button id="camera">
              <i class="fa-solid fa-video"></i>
              <i class="fa-solid fa-video-slash"></i>
            </button>
            <button id="hangup">
              <i class="fa-solid fa-phone-slash"></i>
            </button>
        </div>
      </main>
    </div>
  </body>
</html>
